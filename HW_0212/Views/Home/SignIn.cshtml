<form method="post" asp-action="SignIn" asp-controller="Home" class="d-flex flex-column">
   
    <label>
        Email
        <input regex="/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/" type="email" name="Email" />
    </label>
    <label>
        Password
        <input type="password" name="Password" />
    </label>
    <button class="btn btn-success">Sign In</button>
</form>