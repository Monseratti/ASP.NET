@{
}

<form method="get" asp-controller="Car" asp-action="Create">
    <button class="btn btn-outline-info">Create car</button>
</form>

@model IEnumerable<Car>

@if(Model.Count()>0){
    <table>
        <thead>
            <tr>
                <th>Model</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item
                    </td>
                    <td>
                        <div class="d-flex">
                        <form method="get" asp-controller="Car" asp-action="Details" asp-route-id ="@item.Id">
                            <button class="btn btn-dark">Info</button>
                        </form>
                        <form method="get" asp-controller="Car" asp-action="Edit" asp-route-id="@item.Id">
                            <button class="btn btn-success">Edit</button>
                        </form>
                        <form method="post" asp-controller="Car" asp-action="Delete" asp-route-id="@item.Id">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        </div>
                    </td>
                </tr>
            }
    
        </tbody>
    </table>
}